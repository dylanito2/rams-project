<h1>Write a new reply!</h1>

<%= form_for @reply do |f| %>
<% if @reply.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@reply.errors.count, "error") %>
      prohibited this reply from being saved:
    </h2>

    <ul>
    <% @reply.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <br /><br />
  <%= f.label :content %>
  <%= f.trix_editor :content %><br /><br />
  <%= hidden_field_tag "post_id", params[:post_id]%>
  <%= f.submit %>
<% end %>

<%= link_to 'Back', post_path(params[:post_id]) %>
