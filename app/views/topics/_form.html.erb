<%= form_for topic do |f| %>
<% if topic.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(topic.errors.count, "error") %>
      prohibited this user from being saved:
    </h2>

    <ul>
    <% topic.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <%= f.label :name %>
  <%= f.text_field :name %><br />
  <%= f.submit %>
<% end %>
